# FastAPI Backend Environment Configuration
# Copy this to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# API Configuration  
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False

# Database Connection Pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# CORS Origins (Next.js frontend URLs)
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:3002"]

# File Storage Paths
DATA_DIRECTORY=/data
IMAGES_DIRECTORY=/data/cameras
VIDEOS_DIRECTORY=/data/videos

# Worker Settings
CAPTURE_INTERVAL=300
MAX_CONCURRENT_CAPTURES=4
HEALTH_CHECK_INTERVAL=120

# Logging
LOG_LEVEL=INFO
LOG_FILE=/data/api.log

# Next.js Frontend Environment
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8000
